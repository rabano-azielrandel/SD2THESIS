<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".FirstActivity">


    <ImageView
        android:id="@+id/mainact_logo"
        android:layout_width="191dp"
        android:layout_height="199dp"
        android:adjustViewBounds="true"
        android:src="@drawable/main_flogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312"
        />

    <TextView
        android:id="@+id/Mabuhay"
        android:layout_width="364dp"
        android:layout_height="66dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="Mabuhay!"
        android:textAlignment="viewStart"
        android:textColor="#573d00"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainact_logo"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="362dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:text="Enhance your Filipino writing with our all-in-one assistant application!"
        android:textAlignment="viewStart"
        android:textColor="#573d00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Mabuhay"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_getstarted"
        android:layout_width="125dp"
        android:layout_height="118dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/main_startbuttonn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/main_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
